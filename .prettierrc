{
	"trailingComma": "none",
	"singleQuote": true,
	"tabWidth": 2,
	"printWidth": 180,
	"useTabs": true,
	"bracketSpacing": true,
	"bracketSameLine": true,
	"xmlSelfClosingSpace": true,
	"overrides": [
		{
			"files": "*.{yml,yaml}",
			"options": { "tabWidth": 2, "useTabs": false }
		},
		{
			"files": ".prettierrc",
			"options": { "parser": "json", "printWidth": 80 }
		}
	],
	"plugins": ["@prettier/plugin-xml"],
	"$schema": "https://json.schemastore.org/prettierrc"
}
